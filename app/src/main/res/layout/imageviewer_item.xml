<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager_item_image"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent">

    </ImageView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_40sdp"
        >
        <ImageButton
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/templl1"

            android:src="@drawable/ic_baseline_share_24"
            android:id="@+id/imageViewer_sharebutton"
            android:layout_marginRight="@dimen/_20sdp">

        </ImageButton>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/templl1"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

        </LinearLayout>
        <ImageButton
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageviewer_downloadbutton"
            android:layout_marginLeft="@dimen/_20sdp"

            android:src="@drawable/ic_baseline_save_alt_24"
            android:layout_toRightOf="@+id/templl1">

        </ImageButton>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>